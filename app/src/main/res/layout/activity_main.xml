<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:layoutDirection="rtl">

    <android.support.design.widget.NavigationView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/HeaderBar"
            android:elevation="4dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="سهند گشت"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:fontFamily="@font/vazir" />



            </RelativeLayout>

        </android.support.v7.widget.Toolbar>


        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:fontFamily="@font/vazir"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:id="@+id/first_day_tour"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_page_tour"/>
            <TextView
                android:fontFamily="@font/vazir"
                android:textColor="#000"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/list_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_more"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:id="@+id/recycler_first_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:itemCount="7" />

        <ImageView
            android:src="@drawable/image"
            android:layout_width="wrap_content"
            android:layout_height="70dp" />

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/vazir"
                android:textColor="#000"
                android:layout_alignParentRight="true"
                android:id="@+id/gasht_tour"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_page_tour_2"/>
            <TextView
                android:fontFamily="@font/vazir"
                android:textColor="#000"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/list_more_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_more"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layoutDirection="rtl"
            android:id="@+id/recycler_gasht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:itemCount="7" />


    </LinearLayout>



</android.support.v4.widget.DrawerLayout>