<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/offered_tour"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@drawable/layout_style"
        android:layout_marginTop="265dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offered_tour"
                android:textSize="20sp"
                android:fontFamily="@font/iransans_fanum_bold"
                android:textColor="@color/darkGreen"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/list_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_more"
                android:textSize="15sp"
                android:fontFamily="@font/iransans_fanum_bold"
                android:textColor="@color/green"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/offered_tour_recycler"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:layout_marginTop="60dp">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/special_tour"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@color/darkGreen"
        android:layout_below="@id/offered_tour"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/special_tour_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/special_tours"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/special_tour"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/iransans_fanum_bold"
                android:textColor="@color/darkGreen"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/list_more_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_more"
                android:textSize="15sp"
                android:fontFamily="@font/iransans_fanum_bold"
                android:textColor="@color/greenLight"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/special_tour_recycler"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:layout_marginTop="60dp">
            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@color/white"
        android:layout_below="@id/special_tour"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_day_tour"
                android:textSize="20sp"
                android:fontFamily="@font/iransans_fanum_bold"
                android:textColor="@color/darkGreen"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/list_more_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_more"
                android:textSize="15sp"
                android:fontFamily="@font/iransans_fanum_bold"
                android:textColor="@color/green"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/oneday_tour_recycler"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:layout_marginTop="60dp">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>