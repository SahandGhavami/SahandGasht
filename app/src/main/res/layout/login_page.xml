<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_welcome_page">

    <ImageView
        android:id="@+id/login_page_logo"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:layout_above="@id/login_email_insert"
        android:layout_centerInParent="true"
        android:layout_marginBottom="80dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/login_email_insert"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/search_style"
        android:fontFamily="@font/iransansweb_fanum_medium"
        android:hint="ایمیل : abv@gmail.com"
        android:layoutDirection="rtl"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/login_password_insert"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/login_email_insert"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/search_style"
        android:fontFamily="@font/iransansweb_fanum_medium"
        android:hint="پسورد"
        android:inputType="textPassword"
        android:layoutDirection="rtl"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <Button
        android:id="@+id/login_submit_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/login_password_insert"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/reserve_button_style"
        android:fontFamily="@font/iransans_fanum_bold"
        android:text="ثبت"
        android:textColor="@color/whiteDark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/login_to_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_submit_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/iransans_fanum_bold"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:text="می‌خواهم عضو شوم."
        android:textColor="@color/whiteDark"
        android:textSize="15sp" />

</RelativeLayout>