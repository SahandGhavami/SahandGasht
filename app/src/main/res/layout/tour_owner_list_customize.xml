<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/tour_owner_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نام تور"
        android:textSize="16sp"
        android:textColor="@color/darkGreen"
        android:fontFamily="@font/iransans_fanum_bold"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tour_owner_list_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تعداد رزرو شده"
        android:textSize="16sp"
        android:textColor="@color/darkGreen"
        android:fontFamily="@font/iransans_fanum_bold"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/tour_owner_list_name"/>

    <TextView
        android:id="@+id/tour_owner_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تاریخ رفت"
        android:textSize="16sp"
        android:textColor="@color/darkGreen"
        android:fontFamily="@font/iransans_fanum_bold"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/tour_owner_list_number"/>

    <TextView
        android:id="@+id/tour_owner_list_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ویرایش"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/darkGreen"
        android:fontFamily="@font/iransans_fanum_bold"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>