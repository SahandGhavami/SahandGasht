<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    app:cardCornerRadius="10dp">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_tours_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/image_style"
        android:padding="4dp">

        <ImageView
            android:id="@+id/my_tours_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/my_tours_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_tours_image"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/iransans_fanum_bold"
            android:text="@string/one_day_tour"
            android:textColor="@color/darkGreen"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/my_tours_money_logo"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_tours_title"
            android:layout_alignParentEnd="true"
            android:src="@drawable/money" />

        <TextView
            android:id="@+id/my_tours_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_tours_title"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/my_tours_money_logo"
            android:fontFamily="@font/iransansweb_fanum_light"
            android:text="25000"
            android:textColor="@color/darkGreen" />

        <ImageView
            android:id="@+id/my_tours_date_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_tours_money_logo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:src="@drawable/date" />

        <TextView
            android:id="@+id/my_tours_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_tours_money_logo"
            android:layout_marginTop="6dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/my_tours_date_logo"
            android:fontFamily="@font/iransansweb_fanum_light"
            android:text="@string/one_day_tour"
            android:textColor="@color/darkGreen" />

        <ImageView
            android:id="@+id/my_tours_reserved_date_logo"
            android:layout_width="20dp"
            android:layout_height="33dp"
            android:layout_below="@id/my_tours_date_logo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:src="@drawable/reserved" />

        <TextView
            android:id="@+id/my_tours_reserved_date"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@id/my_tours_date"
            android:layout_marginTop="6dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/my_tours_reserved_date_logo"
            android:fontFamily="@font/iransansweb_fanum_light"
            android:gravity="center"
            android:text="@string/one_day_tour"
            android:textColor="@color/darkGreen" />

        <Button
            android:id="@+id/my_tours_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:background="@drawable/reserve_button_style"
            android:fontFamily="@font/iransans_fanum_bold"
            android:text="@string/recycler_button"
            android:textColor="@color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
