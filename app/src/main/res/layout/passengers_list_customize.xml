<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/passengers_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp"
    android:padding="4dp"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:id="@+id/passengers_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/passengers_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/darkGreen"
            android:fontFamily="@font/iransans_fanum_bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/passengers_list_lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام خانوادگی"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/darkGreen"
            android:fontFamily="@font/iransans_fanum_bold"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/passengers_list_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="شماره موبایل"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/darkGreen"
            android:fontFamily="@font/iransans_fanum_bold"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>