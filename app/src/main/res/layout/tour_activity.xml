<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:chainUseRtl="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/tour_activity_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/shiraz"/>
        <TextView
            android:id="@+id/tour_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/vazir"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tour_activity_date"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:fontFamily="@font/vazir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98/98/98"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tour_activity_cost"
            android:layout_centerVertical="true"
            android:textSize="12dp"
            android:fontFamily="@font/vazir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toLeftOf="@+id/tour_activity_date"
        android:layout_marginRight="25dp"
        />
        <TextView
            android:id="@+id/tv"
            android:textSize="12dp"
            android:fontFamily="@font/vazir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tour_activity_cost"
            android:layout_marginRight="25dp"/>
        <TextView
            android:textSize="12dp"
            android:fontFamily="@font/vazir"
            android:id="@+id/tour_activity_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv"
            android:text=""
            android:layout_below="@+id/tv"
            />
        <Button
            android:layout_centerVertical="true"
            android:textSize="12dp"
            android:textColor="#fff"
            android:background="@drawable/reserve_button_style"
            android:id="@+id/tour_activity_reserve"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="رزرو"
            android:fontFamily="@font/vazir"
            />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:layoutDirection="rtl"
        android:id="@+id/tour_activity_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:background="@color/colorPrimaryDark"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_id"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        >
    </android.support.v4.view.ViewPager>

</LinearLayout>