<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardview"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="215dp"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tour_image_cardview"
            android:layout_width="150dp"
            android:layout_height="110dp" />
        <TextView
            android:id="@+id/tour_name_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام تور"
            android:textSize="14sp"
            android:layout_below="@id/tour_image_cardview"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/vazir"
            android:paddingRight="5dp"/>
        <TextView
            android:id="@+id/cost_tour_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="قیمت تور"
            android:textSize="14sp"
            android:fontFamily="@font/vazir"
            android:paddingRight="5dp"
            android:layout_below="@+id/tour_name_cardview"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/date_tour_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="تاریخ تور"
            android:fontFamily="@font/vazir"
            android:paddingRight="5dp"
            android:layout_below="@+id/cost_tour_cardview"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/number_tour_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ظرفیت"
            android:textSize="14sp"
            android:fontFamily="@font/vazir"
            android:paddingRight="5dp"
            android:layout_below="@+id/date_tour_cardview"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>